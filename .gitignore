# Ignore everything (dirs, files, sub-dirs, sub-files)
/*

# But do not ignore these files...
!/.gitignore
!/.gitconfig
!/.tmux.conf

# Do not ignore .config folder
!/.config
# ... but ignore files and dirs in the .config directory
/.config/*

# Do not ignore fish and nvim directory
!/.config/fish
!/.config/nvim
# ... but ignore files and dirs in the each directory
/.config/fish/*
/.config/nvim/*

# Do not ignore these files
!/.config/fish/config.fish
!/.config/fish/fish_plugins
!/.config/nvim/init.lua

# Do not ignore lua, after directory
!/.config/nvim/lua
!/.config/nvim/after

# ... but ignore all files and dirs in these directories
/.config/nvim/lua/*
/.config/nvim/after/*

# ... except these files
!/.config/nvim/lua/base.lua
!/.config/nvim/lua/highlights.lua
!/.config/nvim/lua/maps.lua
!/.config/nvim/lua/plugins.lua

# Do not ignore after/plugin directory
!/.config/nvim/after/plugin

# ... but ignore all files in that directory
/.config/nvim/after/plugin/*

# ... except these files
!/.config/nvim/after/plugin/hop.lua
!/.config/nvim/after/plugin/fidget.lua
!/.config/nvim/after/plugin/fuzzyfinder.lua
!/.config/nvim/after/plugin/lsp.lua
!/.config/nvim/after/plugin/lsp-rust.lua
!/.config/nvim/after/plugin/theme.lua
